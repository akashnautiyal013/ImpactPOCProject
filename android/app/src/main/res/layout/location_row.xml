<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.imageview.ShapeableImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:scaleType="centerCrop"
    app:srcCompat="@drawable/ironman_icon_small"
    android:id="@+id/row_image"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"

    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_title"
        app:layout_constraintLeft_toRightOf="@+id/row_image"
        app:layout_constraintTop_toTopOf="@+id/row_image"
        app:layout_constraintBottom_toTopOf="@+id/lat_text"
        android:text="Outdoor Workout"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat_text"
        app:layout_constraintLeft_toLeftOf="@+id/row_title"
        app:layout_constraintBottom_toBottomOf="@+id/row_image"
        app:layout_constraintTop_toBottomOf="@+id/row_title"
        android:textSize="14sp"
        android:text="Lat"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lat_value"
        app:layout_constraintLeft_toRightOf="@+id/lat_text"
        app:layout_constraintBottom_toBottomOf="@+id/row_image"
        app:layout_constraintTop_toBottomOf="@+id/row_title"
        android:textSize="14sp"
        android:text="22.22"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/long_text"
        app:layout_constraintLeft_toRightOf="@id/lat_value"
        app:layout_constraintTop_toTopOf="@+id/lat_text"
        app:layout_constraintBottom_toBottomOf="@+id/lat_text"
        android:textSize="14sp"
        android:text="Long"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/long_value"
        app:layout_constraintLeft_toRightOf="@+id/long_text"
        app:layout_constraintBottom_toBottomOf="@+id/lat_text"
        app:layout_constraintTop_toTopOf="@+id/lat_text"
        android:textSize="14sp"
        android:text="22.22"
        android:layout_marginLeft="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>